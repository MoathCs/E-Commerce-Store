<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <!-- Add Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
  <style>
    body {
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      font-family: Arial, sans-serif;
    }

    /* Sidebar Navigation */
    .sidebar {
      width: 250px;
      background-color: #333;
      color: white;
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100%;
      top: 0;
      left: 0;
      padding: 20px;
    }

    .sidebar h2 {
      color: #f39c12;
      text-align: center;
      font-size: 24px;
      margin-bottom: 20px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px;
      display: block;
      border-radius: 4px;
      margin-bottom: 10px;
    }

    .sidebar a:hover {
      background-color: #f39c12;
      color: black;
    }

    /* Header Section */
    .header {
      margin-left: 250px;
      padding: 20px;
      background-color: #f9f9f9;
    }

    .header h1 {
      font-size: 28px;
      color: #101010;
    }

    .header p {
      color: #666;
    }

    /* Content Section */
    .content {
      margin-left: 250px;
      flex: 1;
      padding: 20px;
      background-color: #f9f9f9;
    }


    /* Table Styling */
    .table {
      margin-top: 20px;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        width: 100%;
        height: auto;
      }

      .header, .content {
        margin-left: 0;
      }
    }

    .sidebar .logout {
        margin-top: auto;
        background-color: #f03939;
        text-align: center;
        padding: 15px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
      }
  
      .sidebar .logout:hover {
        background-color: #d93232;
      }
  
  
  </style>
</head>
<body>
  <!-- Sidebar Navbar -->
  <aside class="sidebar">
    <h2>Admin Panel</h2>
    <nav>
      <a href="/admin/adminDashpord">Dashboard</a>
      <a href="/admin/productManagement">Products</a>
      <a href="/admin/addProduct">Add Product</a>
      <a class="logout" href="/logout" style="color: white; text-decoration: none;">Logout</a>
    </nav>
  </aside>

  <!-- Header Section -->
  <header class="header">
    <h1>User Management</h1>
  </header>

  <!-- Main Content -->
  <main class="content">
    <!-- User Table -->
    <table class="table table-striped table-bordered text-center">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Full Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% arr.forEach((item, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= item.fullName %></td>
            <td><%= item.email %></td>
            <td>
              <a href="/admin/viewUser/<%= item._id %>" class="btn btn-info btn-sm">View</a>
              <a href="/admin/editUser/<%= item._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form method="POST" action="/admin/editUser/<%= item._id %>?_method=DELETE" style="display: inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <!-- Footer -->
</body>
</html>
